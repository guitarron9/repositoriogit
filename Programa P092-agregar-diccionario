# p092 - Agregar elementos a diccionario de ventas
import os
os.system('cls' if os.name == 'nt' else 'clear')

ventas = {
    "Juan": 1550,
    "Jose": 2600,
    "Maria": 2220
}

print("Ventas iniciales:", ventas)

ventas["Rocio"] = 2500
ventas["Mateo"] = 1567
ventas.update({"Andrea": 9567})
ventas.update({"Miguel": 1234})

print("\nVentas actualizadas:", ventas)
