import os

os.system('clear')

# p054 - Tabla de multiplicar con posibilidad de repetir
import os
while True:
    os.system('cls' if os.name == 'nt' else 'clear')
    print('Tabla de multiplicar con for \n')
    t = int(input('¿Qué tabla deseas? '))
    n = int(input('¿Hasta dónde la deseas? '))
    for i in range(1, n + 1):
        print(f'{t} x {i} = {t * i}')
    res = input('\n¿Deseas continuar (S/N)? ').upper()
    if res == 'N':
        break
print('Gracias por utilizar este programa\n')
